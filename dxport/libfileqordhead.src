sub DeleteKeys(BegDir,EndDir)
  !
  ! BegDir = Beginning Directory
  ! EndDir = Ending Directory
  !
  Try
    Dim CurKey$[64],3%,CurRec
    !
    For CurDir=EndDir to BegDir Step -1
      CurKey$=""
      if CurDir=1 let CurKey$=oldqoh.Status using "##",oldqoh.OrdNum using "######"
      if CurDir=2 let CurKey$=oldqoh.CustNum using "#######",oldqoh.OrdNum using "######",oldqoh.Blankforkey$[1, 1 ]
      if CurDir=3 let CurKey$=oldqoh.SLSMnum using "###",oldqoh.OrdNum using "######",oldqoh.Blankforkey$[1, 1 ]
      call DoSearch(CurKey$,5,CurDir) ! add key to directory
    next CurDir
  else
    if spc(8)<10000 call suberr(e$,Spc(8),Spc(10),Msc$(2))
    error 10000
  End Try
End Sub ! DeleteKeys
!
