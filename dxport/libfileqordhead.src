sub ChangeKeys()
  !
  try
    Dim CurKey$[64],OldKey$[64]
    !
    ! Directory #3
    OldKey$=oldqoh.SLSMnum using "###",oldqoh.OrdNum using "######",oldqoh.Blankforkey$[1, 1 ]
    CurKey$=qoh.SLSMnum using "###",qoh.OrdNum using "######",qoh.Blankforkey$[1, 1 ]
    if CurKey$<>OldKey$
      call DoSearch(OldKey$,5,3)
      call DoSearch(Curkey$,4,3)
    endif
    !
    ! Directory #2
    OldKey$=oldqoh.CustNum using "#######",oldqoh.OrdNum using "######",oldqoh.Blankforkey$[1, 1 ]
    CurKey$=qoh.CustNum using "#######",qoh.OrdNum using "######",qoh.Blankforkey$[1, 1 ]
    if CurKey$<>OldKey$
      call DoSearch(OldKey$,5,2)
      call DoSearch(Curkey$,4,2)
    endif
    !
    ! Directory #1
    OldKey$=oldqoh.Status using "##",oldqoh.OrdNum using "######"
    CurKey$=qoh.Status using "##",qoh.OrdNum using "######"
    if CurKey$<>OldKey$
      call DoSearch(OldKey$,5,1)
      call DoSearch(Curkey$,4,1)
    endif
    !
  else
    if spc(8)<10000 call suberr(e$,Spc(8),Spc(10),Msc$(2),e$)
    error 10000
  End Try
End Sub  ! ChangeKeys
!
End Function e ! updateqoh
